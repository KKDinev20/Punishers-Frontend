            <div class="button1">
    
                <button>Download as PDF</button>
                <script>
                    function downloadAsPDF() {
                        const doc = new jsPDF();
                        doc.text("CV model EU", 10, 10);
                        
                        doc.save("cv.pdf");
                    }
                    document.getElementById("downloadButton").addEventListener("click", downloadAsPDF);
                </script>
